{
    "name": "hf-dataset",
    "version": "0.1.0",
    "type": "module",
    "description": "use HuggingFace datasets from Node.js",
    "main": "hfDataset.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx",
        "typecheck": "tsc --noEmit",
        "lint": "npm run lint:js && npm run lint:yaml",
        "lint:js": "biome lint .",
        "lint:yaml": "yamllint .github/**/*.yml",
        "format": "biome format --write .",
        "check": "biome check .",
        "clean": "rm -f *.js *.d.ts *.js.map *.d.ts.map",
        "prepublishOnly": "npm run clean && npm run check && npm run build",
        "test": "npm run build && node --test test.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vdeturckheim/hf-dataset.git"
    },
    "author": "vdeturckheim",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vdeturckheim/hf-dataset/issues"
    },
    "homepage": "https://github.com/vdeturckheim/hf-dataset#readme",
    "keywords": [
        "huggingface",
        "ml",
        "dataset"
    ],
    "engines": {
        "node": ">=24.3.0"
    },
    "dependencies": {
        "@dsnp/parquetjs": "^1.8.7",
        "@huggingface/hub": "^2.4.1",
        "@types/debug": "^4.1.12",
        "csv-parse": "^6.1.0",
        "debug": "^4.4.1",
        "seedrandom": "^3.0.5"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.2",
        "@types/node": "^24.3.0",
        "@types/seedrandom": "^3.0.8",
        "typescript": "^5.9.2",
        "yaml-lint": "^1.7.0"
    }
}
